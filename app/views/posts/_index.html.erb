<div class= "posts">
  <% @posts.each do |post| %>
    <div class= "post", id="post-<%=post.id%>">
      <b><%=post.author.full_name%></b><br>
      <%=post.description%><br>
      <%=like_post(post, "Post")%><br/>
      <%=post_comments(post)%> <br>
      <%= render partial: 'comments/new.html.erb', locals: {post: post} %>
      <%# <a href="javascript:void(0)" class="comment-link" >Comment</a> %>
      <%= link_to 'Comment', 'javascript:void(0)', class: "comment-link", data_post: "#{post.id}" %>
      <a href="javascript:void(0)" class="comment-hide" >Cancel</a>
    </div>
  <% end %>
</div>